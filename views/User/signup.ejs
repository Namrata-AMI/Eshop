
<%- layout("/layouts/boilerplate") %>



<div class="row mt-5">
    <h1 class="col-6 offset-3"> Sign-Up on Eshop</h1>
    <div class="col-6 offset-3">
        <form method="post" action="/app/signup" class="needs-validation" novalidate>

        <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input type="text" name="username" placeholder="Enter username" class="form-control" required>
            <div class="invalid-feedback">Looks Good!</div>
        </div>

        <input type="email" name="email" placeholder="Enter email" id="email"
            class="form-control" required pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$">
        <div class="invalid-feedback">
            Please enter a valid email address.
        </div>


        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" name="password" placeholder="Enter password"  id ="password" class="form-control" required>
        </div>

        <button class="btn btn-primary"> Sign-Up</button>
    </form>
    </div>
</div>