<%- layout("/layouts/boilerplate.ejs") %>

<div class="container mt-5">
  <div class="row g-4">
    <% products.forEach(product => { %>
      <div class="col-lg-4 col-md-6 col-sm-12">
        <div class="card h-100 shadow-sm border-0 rounded-4 hover-shadow">
          <img src="<%= product.images[0] %>" class="card-img-top rounded-top-4" alt="Product Image" style="height: 250px; object-fit: contain; background-color: #f8f9fa;">
          <div class="card-body d-flex flex-column">
            <h5 class="card-title fw-bold mb-2 text-dark text-truncate"><%= product.name %></h5>
            <p class="text-muted mb-1"><strong>Price:</strong> $<%= product.price.toFixed(2) %></p>
            <p class="text-muted mb-1"><strong>Brand:</strong> <%= product.brand %></p>
            <p class="card-text small text-secondary text-truncate"><%= product.description %></p>
            
            <div class="mt-auto d-flex justify-content-between">
              <form action="/app/cart/<%= product._id %>" method="POST">
                <button class="btn btn-outline-primary btn-sm">
                  <i class="fa-solid fa-cart-shopping me-1"></i> Add to Cart
                </button>
              </form>
              <a href="/app/<%= product._id %>" class="btn btn-warning btn-sm">View</a>
            </div>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>
